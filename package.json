{
  "name": "blanklogo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @blanklogo/web dev",
    "dev:all": "./scripts/dev-start.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "dev:worker": "pnpm --filter @blanklogo/worker dev",
    "dev:api": "pnpm --filter @blanklogo/api dev",
    "build": "pnpm --filter @blanklogo/web build",
    "build:api": "pnpm --filter @blanklogo/api build",
    "build:worker": "pnpm --filter @blanklogo/worker build",
    "build:web": "pnpm --filter @blanklogo/web build",
    "lint": "pnpm --filter @blanklogo/web lint",
    "test": "vitest run --exclude tests/db",
    "test:watch": "vitest --exclude tests/db",
    "test:coverage": "vitest run --coverage --exclude tests/db",
    "test:unit": "vitest run tests/unit",
    "test:db": "vitest run tests/db",
    "test:worker": "vitest run tests/worker",
    "test:security": "vitest run tests/security",
    "test:e2e": "playwright test",
    "test:e2e:check": "./scripts/wait-for-services.sh && playwright test",
    "test:e2e:live": "playwright test --project=live",
    "test:e2e:live:golden": "playwright test --project=live tests/e2e/live/golden-path-*.spec.ts",
    "test:e2e:live:security": "playwright test --project=live tests/e2e/live/security.spec.ts",
    "test:e2e:live:browser-matrix": "playwright test --project=live --project=live-firefox --project=live-safari",
    "test:e2e:live:cleanup": "npx tsx tests/e2e/live/cleanup.ts",
    "test:perf": "playwright test tests/e2e/performance.spec.ts --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "vitest run --exclude tests/db",
    "test:integration": "vitest run tests/integration",
    "test:integration:full": "vitest run tests/integration --timeout=600000",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "db:studio": "open http://127.0.0.1:54353",
    "health": "bash scripts/health-check.sh",
    "health:watch": "watch -n 5 'bash scripts/health-check.sh'",
    "doctor": "bash scripts/health-check.sh && echo '\\n=== Running Tests ===' && pnpm test:e2e --project=chromium tests/e2e/auth-flows.spec.ts --reporter=list | tail -20",
    "start": "bash scripts/startup.sh",
    "start:api": "bash scripts/startup.sh api",
    "start:frontend": "bash scripts/startup.sh frontend",
    "start:redis": "bash scripts/startup.sh redis",
    "stop": "bash scripts/shutdown.sh",
    "stop:force": "bash scripts/shutdown.sh force",
    "status": "bash scripts/startup.sh status",
    "test:services": "bash scripts/test-services.sh",
    "test:redis": "bash scripts/test-services.sh redis",
    "test:api": "bash scripts/test-services.sh api",
    "test:frontend": "bash scripts/test-services.sh frontend",
    "test:inter": "bash scripts/test-services.sh interconnection",
    "test:integration:quick": "bash scripts/run-integration-tests.sh quick",
    "test:integration:e2e": "bash scripts/run-integration-tests.sh full",
    "test:integration:vitest": "bash scripts/run-integration-tests.sh vitest",
    "test:lifecycle": "bash scripts/test-lifecycle.sh",
    "test:lifecycle:startup": "bash scripts/test-lifecycle.sh startup",
    "test:lifecycle:shutdown": "bash scripts/test-lifecycle.sh shutdown",
    "test:lifecycle:restart": "bash scripts/test-lifecycle.sh restart 3",
    "test:harness": "bash scripts/test-harness.sh",
    "test:harness:quick": "bash scripts/test-harness.sh quick",
    "test:harness:baseline": "bash scripts/test-harness.sh baseline",
    "test:harness:crash": "bash scripts/test-harness.sh crash",
    "test:harness:depdown": "bash scripts/test-harness.sh depdown",
    "test:harness:caps": "bash scripts/test-harness.sh caps",
    "test:deployment": "playwright test tests/deployment",
    "test:deployment:smoke": "playwright test tests/deployment/smoke-tests.spec.ts",
    "test:deployment:health": "playwright test tests/deployment/health-checks.spec.ts",
    "check:deployment": "bash scripts/check-deployment.sh",
    "check:deployment:prod": "DEPLOY_API_URL=https://blanklogo-api.onrender.com DEPLOY_WEB_URL=https://www.blanklogo.app bash scripts/check-deployment.sh",
    "check:deployment:local": "DEPLOY_API_URL=http://localhost:8989 DEPLOY_WEB_URL=http://localhost:3939 bash scripts/check-deployment.sh",
    "diagnostics:api": "curl -s ${API_URL:-http://localhost:8989}/diagnostics | jq .",
    "diagnostics:api:prod": "curl -s https://blanklogo-api.onrender.com/diagnostics | jq .",
    "test:remote-worker": "npx tsx scripts/test-remote-worker.ts",
    "test:remote-worker:prod": "API_URL=https://blanklogo-api.onrender.com npx tsx scripts/test-remote-worker.ts",
    "deploy:notify": "npx tsx scripts/deploy-notify.ts",
    "deploy:notify:success": "npx tsx scripts/deploy-notify.ts --status=success",
    "deploy:notify:failure": "npx tsx scripts/deploy-notify.ts --status=failure"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@supabase/supabase-js": "^2.45.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^16.4.5",
    "msw": "^2.12.7",
    "resend": "^4.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vitest": "^4.0.16",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
