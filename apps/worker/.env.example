# ===========================================
# CanvasCast Worker Environment Variables
# ===========================================

# Worker Identity
WORKER_ID=worker-1
POLL_INTERVAL_MS=800
MAX_ACTIVE_PER_USER=1

# Supabase (use local or production)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI for script generation, TTS, Whisper, and image generation
OPENAI_API_KEY=sk-your-openai-key

# Groq (primary for transcription - FREE)
GROQ_API_KEY=gsk_your-groq-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TTS_VOICE=onyx

# App base URL for email notifications
APP_BASE_URL=http://localhost:3838
INTERNAL_NOTIFY_SECRET=canvascast-internal-secret

# TTS Provider: "indextts" | "openai" | "mock"
# - indextts: Voice cloning via IndexTTS-2 on Hugging Face (requires HF_TOKEN)
# - openai: OpenAI TTS fallback (requires OPENAI_API_KEY)
# - mock: Silent placeholder audio (for testing)
TTS_PROVIDER=indextts

# Hugging Face token for IndexTTS-2 voice cloning
# Get yours at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your-huggingface-token
HF_INDEXTTS_SPACE=Heartsync/IndexTTS-2

# Image Generation
IMAGE_PROVIDER=openai
DALLE_SIZE=1024x1024
DALLE_QUALITY=standard

# Remotion rendering
REMOTION_CONCURRENCY=2
