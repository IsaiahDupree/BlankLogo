# ===========================================
# BlankLogo Web App Environment Variables
# ===========================================

# Supabase (from `supabase status` or production dashboard)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54351
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Resend (email notifications)
RESEND_API_KEY=re_your-resend-key
RESEND_FROM="BlankLogo <hello@blanklogo.com>"

# App Configuration (Frontend)
PORT=3939
APP_BASE_URL=http://localhost:3939

# API Server
NEXT_PUBLIC_API_URL=http://localhost:8989

# Internal
INTERNAL_NOTIFY_SECRET=your-internal-secret

# Stripe (from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_STARTER=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_BUSINESS=price_xxxxx

# Analytics - Meta Pixel + Conversions API
NEXT_PUBLIC_META_PIXEL_ID=10039038026189444
META_CAPI_ACCESS_TOKEN=your-meta-capi-access-token

# PostHog Analytics (from https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
# PostHog Admin API (for admin dashboard - get from PostHog Settings > Personal API Keys)
POSTHOG_PROJECT_ID=your-project-id
POSTHOG_PERSONAL_API_KEY=phx_your-personal-api-key

# Promo System (credit rewards)
PROMO_JWT_SECRET=your-32-char-secret-for-promo-tokens
